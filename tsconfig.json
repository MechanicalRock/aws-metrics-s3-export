{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "strict": false,
    "sourceMap": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowJs": true,
    "target": "es2017",
    "moduleResolution": "node",
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "src",
    "test",
    "src/*.ts",
    "src/*.js"
  ],
  "exclude": [
    "./node_modules"
  ]
}
